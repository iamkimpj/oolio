{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
